{
  "name": "axie-infinity-offline",
  "version": "2.1.0",
  "description": "ðŸŽ® Experience Axie Infinity offline! Complete battle simulator, team builder, and strategy tester - no blockchain or internet required.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:renderer\"",
    "dev:electron": "electron . --dev",
    "dev:renderer": "webpack serve --mode development",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "webpack --mode production",
    "build:electron": "electron-builder",
    "build:all": "electron-builder --publish=never -mwl",
    "dist": "npm run build && electron-builder --publish=always",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,md}\"",
    "docs:dev": "bundle exec jekyll serve --source docs --livereload",
    "docs:build": "bundle exec jekyll build --source docs",
    "pack": "electron-builder --dir",
    "precommit": "lint-staged",
    "release": "semantic-release",
    "clean": "rimraf dist build release node_modules/.cache"
  },
  "keywords": [
    "axie-infinity",
    "battle-simulator",
    "team-builder",
    "gaming",
    "strategy",
    "offline",
    "blockchain-free",
    "nft-game",
    "electron",
    "cross-platform",
    "turn-based",
    "pokemon-like",
    "crypto-game",
    "web3-gaming",
    "axie-offline"
  ],
  "author": {
    "name": "Axie Infinity Offline Community",
    "email": "team@axie-offline.com",
    "url": "https://axie-offline.com"
  },
  "license": "MIT",
  "homepage": "https://axie-lnfinity.github.io/axie-infinity",
  "repository": {
    "type": "git",
    "url": "https://github.com/Axie-lnfinity/axie-infinity.git"
  },
  "bugs": {
    "url": "https://github.com/Axie-lnfinity/axie-infinity/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "main": "src/main.js",
  "build": {
    "appId": "com.axie-offline.axie-infinity",
    "productName": "Axie Infinity Offline",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!**/*.ts",
      "!src/**/*.test.*",
      "!src/**/*.spec.*"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.games",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Game",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "electron": "^27.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "electron-store": "^8.1.0",
    "sqlite3": "^5.1.6",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0",
    "date-fns": "^2.30.0",
    "classnames": "^2.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "electron-builder": "^24.6.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "typescript": "^5.2.2",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.3",
    "jest": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.4",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "lint-staged": "^14.0.1",
    "husky": "^8.0.3",
    "semantic-release": "^22.0.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/setupTests.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{test,spec}.{js,jsx,ts,tsx}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,scss,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/axie-infinity-offline"
  }
} 